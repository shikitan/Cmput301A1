<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.danielbuzzer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BuzzerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleActivity"
            android:label="@string/title_activity_single" >
            <intent-filter>
                <action android:name="danielbuzzer.Single" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MultiActivity"
            android:label="@string/title_activity_multi" >
            <intent-filter>
                <action android:name="danielbuzzer.Multi" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatsActivity"
            android:label="@string/title_activity_stats" >
            <intent-filter>
                <action android:name="danielbuzzer.Stats" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Multi2Activity"
            android:label="@string/title_activity_multi2" >
            <intent-filter>
                <action android:name="danielbuzzer.Multi2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Multi3Activity"
            android:label="@string/title_activity_multi3" >
            <intent-filter>
                <action android:name="danielbuzzer.Multi3" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Multi4Activity"
            android:label="@string/title_activity_multi4" >
            <intent-filter>
                <action android:name="danielbuzzer.Multi4" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
